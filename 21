#include <stdio.h>
void main()
{
  int n,p=1,i=2;
  printf("Enter a number : \n");
  scanf("%d",&n);
  while(i<=n/2)
  {
    if(n%i==0)
    {
      p=0;
      break;
    }
    i++;
  }
  
  if (p==1)
  {
    printf("%d is a prime number.\n",n);
  }
  else
  {
    printf("%d is not a prime number.\n",n);
  }
}
